# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index()
GET         /login                  controllers.Application.login()
POST        /logar                  controllers.Application.logar()
GET         /logout                 controllers.Application.logout()
POST        /registrar              controllers.Application.registrar()
GET         /dica                   controllers.Application.dica(id: Long)
GET         /disciplina             controllers.Application.disciplina(id: Long)
GET         /tema                   controllers.Application.tema(id: Long)
POST        /postarDica             controllers.Application.postarDica()
POST        /postarMetaDica          controllers.Application.postarMetaDica()
POST        /addConcordancia        controllers.Application.adicionaConcordancia()
POST        /addDiscordancia        controllers.Application.adicionaDiscordancia()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)
